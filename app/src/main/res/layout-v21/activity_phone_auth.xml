<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.PhoneAuthActivity">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/title"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:text="@string/welcome_to_whatsapp"
        android:textColor="@color/primary_colour"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/hero"
        android:padding="30dp"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/title"
        android:layout_height="350dp"
        android:src="@drawable/hero"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_above="@id/agree"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:text="@string/read_our_privacy_policy_tap_agree_and_continue_to_accept_the_terms_of_service"
        android:layout_centerHorizontal="true"
        android:id="@+id/terms"
        />
    <Button
        android:onClick="startPhoneAuthActivity"
        android:id="@+id/agree"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:text="@string/agree_and_continue"
        android:padding="10dp"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/light_green"
        android:layout_height="wrap_content"/>

</RelativeLayout>