<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.PhoneAuthActivity">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/title"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:text="Welcome to whatsApp"
        android:textColor="@color/primary_colour"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/hero"
        android:padding="30dp"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/title"
        android:layout_height="350dp"
        android:src="@drawable/hero"
        />
    <TextView
        android:layout_above="@id/agree"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:text='Read our Privacy Policy. Tap "Agree and continue" to accept the Terms of Service'
        android:layout_centerHorizontal="true"
        android:id="@+id/terms"
        />
    <Button
        android:id="@+id/agree"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:text="agree and continue"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/button_bg"
        android:layout_height="wrap_content"/>

</RelativeLayout>